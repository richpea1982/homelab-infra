services:
  cloudflared:
    image: "{{ services.cloudflared.image }}"
    container_name: cloudflared
    restart: always
    command: tunnel run
    networks:
{% for net in services.cloudflared.networks %}
      - {{ net }}
{% endfor %}
    volumes:
      - /opt/cloudflared:/etc/cloudflared

networks:
{% for net in services.cloudflared.networks %}
  {{ net }}:
    external: true
{% endfor %}

