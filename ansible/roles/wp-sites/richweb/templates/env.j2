# WordPress Database Credentials
DB_USER={{ vault_wp_db_user }}
DB_PASSWORD={{ vault_wp_db_password }}
DB_ROOT_PASSWORD={{ vault_wp_db_root_password }}

# Per-site database name
DB_NAME={{ site_name }}_db

# WordPress URLs
WP_HOME=https://{{ services[site_name].nginx.domains[0] }}
WP_SITEURL=https://{{ services[site_name].nginx.domains[0] }}

# PHP Settings
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_LIMIT=64M

